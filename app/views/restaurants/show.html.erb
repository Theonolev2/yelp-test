<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>

<%= @restaurant.name %>

<h2>Reviews</h2>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %><br><%= review.rating %>/5</li>
  <% end %>
</ul>

<div class="btn btn-primary ">
  <%= link_to "New review for #{@restaurant.name}", new_restaurant_review_path(@restaurant), class: "btn" %>
</div>

